<h1 class="text-center my-4">Mes Tâches</h1>

<div class="container">
  <ul class="list-group mb-4">
    <% @tasks.each do |task| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to task.title, task_path(task), class: "text-decoration-none text-dark" %>
        <span class="badge bg-primary rounded-pill">Détails</span>
      </li>
    <% end %>
  </ul>

  <div class="text-center">
    <%= link_to "Ajouter une nouvelle tâche", new_task_path, class: "btn btn-success btn-lg" %>
  </div>
</div>
